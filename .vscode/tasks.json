{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build bridgevr_client apk docker",
            "command": "docker",
            "args": [
                "run",
                "--rm",
                "-v",
                "${workspaceFolder}/bridgevr_client:/root/src",
                "philipalldredge/cargo-apk",
                "cargo apk build"
            ],
        },
        {
            "label": "clippy all",
            "command": "cargo clippy -- -W clippy-pedantic",
        }
    ]
}